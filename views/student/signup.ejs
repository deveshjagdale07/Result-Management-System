<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Signup</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4; /* Light grey background */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height viewport */
        }

        /* Form Container */
        .signup-container {
            background-color: white; /* White background for form */
            padding: 40px; /* Padding inside container */
            border-radius: 10px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            max-width: 400px; /* Maximum width of the form */
            width: 100%; /* Full width for responsiveness */
        }

        /* Title Styles */
        h2 {
            margin-bottom: 20px; /* Space below title */
            color: #4CAF50; /* Green title */
            font-size: 28px; /* Title font size */
            text-align: center; /* Center align the title */
        }

        /* Error Message Styles */
        .error {
            color: red; /* Red for error text */
            margin-bottom: 15px; /* Space below error message */
        }

        /* Label and Input Styles */
        label {
            display: block; /* Labels are block elements */
            text-align: left; /* Left align labels */
            margin-bottom: 5px; /* Space below label */
            color: #333; /* Darker text color */
        }

        input {
            width: 100%; /* Full width input fields */
            padding: 10px; /* Padding inside inputs */
            margin-bottom: 20px; /* Space below inputs */
            border: 1px solid #ccc; /* Light grey border */
            border-radius: 5px; /* Rounded corners */
            box-sizing: border-box; /* Ensure padding is included in width */
        }

        /* Button Styles */
        button {
            background-color: #4CAF50; /* Green background */
            color: white; /* White text */
            border: none; /* No border */
            padding: 15px 20px; /* Padding for button */
            width: 100%; /* Full width button */
            border-radius: 5px; /* Rounded corners */
            font-size: 16px; /* Button text size */
            cursor: pointer; /* Pointer cursor on hover */
            transition: background-color 0.3s; /* Smooth background transition */
        }

        button:hover {
            background-color: #45a049; /* Darker green on hover */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .signup-container {
                padding: 20px; /* Less padding on smaller screens */
            }

            h2 {
                font-size: 24px; /* Smaller font size for title */
            }

            button {
                font-size: 14px; /* Smaller button text */
            }
        }

    </style>
</head>
<body>

    <div class="signup-container">
        <h2>Student Signup</h2>

        <!-- Display error message if exists -->
        <% if (typeof error !== 'undefined') { %>
            <p class="error"><%= error %></p>
        <% } %>

        <!-- Signup form -->
        <form action="/student/signup" method="POST">
            <label for="studentId">Student ID:</label>
            <input type="text" name="studentId" id="studentId" required>

            <label for="name">Name:</label>
            <input type="text" name="name" id="name" required>

            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required>

            <label for="password">Password:</label>
            <input type="password" name="password" id="password" required>

            <button type="submit">Signup</button>
        </form>
    </div>

</body>
</html>
